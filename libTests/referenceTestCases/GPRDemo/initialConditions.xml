<?xml version = "1.0" encoding = "UTF-8" standalone = "yes"?>
<CI>
    <!-- LIST OF GEOMETRICAL DOMAINS  -->
    <physicalDomains>
        <domain name="base" state="left" type="entireDomain"/>
        <domain name="rightDom" state="right" type="halfSpace">
            <dataHalfSpace axis="x" origin="0.5" direction="positive"/>
        </domain>
    </physicalDomains>

    <!-- LIST OF BOUNDARY CONDITIONS -->
    <boundaryConditions>
        <boundCond name="CLXm" type="nonReflecting" number="1"/>
        <boundCond name="CLXp" type="nonReflecting" number="2"/>
    </boundaryConditions>

    <!--  LIST OF STATES  -->
    <state name="left">
        <material type="fluid" EOS="IG_air.xml">
            <dataFluid density="1.0" pressure="1.e7">
                <velocity x="0." y="0." z="0."/>
            </dataFluid>
        </material>
    </state>

    <state name="right">
        <material type="fluid" EOS="IG_air.xml">
            <dataFluid density="0.125" pressure="1.e5">
                <velocity x="0." y="0." z="0."/>
            </dataFluid>
        </material>
    </state>
</CI>
